{% extends '::base.html.twig' %}

{% block body -%}
    <h1>State</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Statename</th>
                <td>{{ entity.stateName }}</td>
            </tr>
            <tr>
                <th>Stateshortname</th>
                <td>{{ entity.stateShortName }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('state') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('state_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
