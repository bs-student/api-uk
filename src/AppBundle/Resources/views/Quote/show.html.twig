{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Quote</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Quotetype</th>
                <td>{{ entity.quoteType }}</td>
            </tr>
            <tr>
                <th>Quotedescription</th>
                <td>{{ entity.quoteDescription }}</td>
            </tr>
            <tr>
                <th>Quoteimage</th>
                <td>{{ entity.quoteImage }}</td>
            </tr>
            <tr>
                <th>Quoteprovider</th>
                <td>{{ entity.quoteProvider }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('quote') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('quote_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
