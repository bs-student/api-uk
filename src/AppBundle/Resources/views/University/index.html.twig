{% extends '::base.html.twig' %}

{% block body -%}
    <h1>University list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Universityname</th>
                <th>Universityurl</th>
                <th>Universitystatus</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('university_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.universityName }}</td>
                <td>{{ entity.universityUrl }}</td>
                <td>{{ entity.universityStatus }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('university_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('university_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('university_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
